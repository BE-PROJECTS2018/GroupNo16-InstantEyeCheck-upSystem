<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question3b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.instanteyecheck_upsystem.keratitis">

    <TextView
        android:text="Disease Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:textColor="@color/colorAccent"
        android:paddingTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keratisis"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:textColor="#000000" />
    <TextView
        android:text="Treatment:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/textView3"
        android:textColor="@color/colorAccent"
        android:paddingTop="20dp" />

    <TextView
        android:text="Treatment includes medication such as antibiotics. Steroid, Antibiotics, and Antiviral drug should be used."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Name and Treatment Advised:"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
