<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_a6"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.example.admin.instanteyecheck_upsystem.a6"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Disease Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1_a6"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stye Chalazion"
            android:id="@+id/textView2_a6"
            android:layout_below="@+id/textView1_a6"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/chalazion2" />
        <TextView
            android:text="Symptoms:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3_a6"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:layout_below="@+id/textView2_a6"
            android:textColor="@color/colorPrimary"
            android:paddingTop="20dp" />

        <TextView
            android:text="Red bump near the eye, Swollen eyelids, Painful eyelids, Blurred eyes."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4_a6"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:layout_below="@+id/textView3_a6"
            android:layout_alignStart="@+id/textView2_a6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Causes:"
            android:id="@+id/textView5_a6"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/textView4_a6"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="Due to bacterial infection, caused by a blockage in one of the tiny meibomian glands of the upper and lower eyelids."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6_a6"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:layout_below="@+id/textView5_a6"
            android:layout_alignStart="@+id/textView2_a6" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatment:"
            android:id="@+id/textView7_a6"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/textView6_a6"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="Clean the eye ointment, Apply warm water 3-6 times a day, Consult a doctor to treat the chalazion."

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8_a6"
            android:textSize="25dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:layout_below="@+id/textView7_a6"
            android:layout_alignStart="@+id/textView7_a6" />

    </LinearLayout>
</ScrollView>